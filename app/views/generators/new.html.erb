<div class="container-generator">
<div class="container-fluid">
  <div class="row">
    <div class= "col-md-8 col-md-offset-2 form-post">
      <h3 class="text-center">Générateur de flashcards</h3>
      <%= simple_form_for [@post, @generator] do |f| %>
      <%= f.error_notification %>
      <%= f.input :ideog1, label: 'Ideogramme 1', input_html: { class: "input-lg"} %>
      <%= f.input :ideog2, label: 'Ideogramme 2', input_html: { rows: 1} %>
       <div class="row">
        <div class="col-sm-6">
          <%= f.input :ideog3, label: 'Ideogramme 3', placeholder: "a, e, i, o, u"  %>
        </div>
        <div class="col-sm-6">
          <%= f.input :ideog4, label: 'Ideogramme 4', placeholder: "a, e, i, o, u"  %>
        </div>
      </div>

      <%= f.input :romanji, label: 'Tanscription en Romanji', input_html: { class: "input-lg"} %>

      <div class="row">
        <div class="col-sm-6">
          <%= f.input :transcription1 %>
        </div>
        <div class="col-sm-6">
          <%= f.input :transcription2 %>
        </div>
      </div>
      <br/>
      <div class="text-center">
       <%= f.submit "Générer la flashcard", class: "btn btn-danger btn-lg" %>
      </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
</div>

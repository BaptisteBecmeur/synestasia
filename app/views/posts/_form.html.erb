<div class="row">
    <div class= "col-md-8 col-md-offset-2 form-post">
      <%= simple_form_for @post do |f| %>
      <%= f.error_notification %>
      <%= f.input :title, label: 'Title', input_html: { class: "input-lg"} %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.input :cover %>
        </div>
        <div class="col-sm-6">
          <%= f.input :category, collection: Post::CATEGORIES, selected: Post::CATEGORIES.first %>
        </div>
      </div>

      <%= f.input :content, label: 'Body', input_html: { rows: 5} %>

      <%= f.submit "Publier votre article", class: "btn btn-success" %>
      <% end %>
      <h4 class="text-center">
          <%= link_to "< Retour", :back,  class: "btn btn-default"  %>
        </h4>
    </div>
  </div>
</div>

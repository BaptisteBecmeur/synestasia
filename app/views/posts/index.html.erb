<div class="container-page">
  <div id="home-articles">
    <div class="container">
      <div class="row">
          <div class="text-center separ-blog">
            <h1>Lisez nos derniers articles</h1>
            </div>
            <ul>
              <% @posts.each do |post| %>
              <li class=" col-sm-12 col-xs-6 col-md-4 container-cards">
                <%= render 'postuser', post: post %>
              </li>
              <% end %>
            </ul>

      </div>
    </div>
  </div>
</div>


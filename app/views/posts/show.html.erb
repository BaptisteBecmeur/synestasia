<div id="show-post">
  <div class="container-post">
    <div class ="headline headline-<%= @post.tag.downcase %>">
      <%= @post.title %>
    </div>
    <div class="container-fluid">
      <div class="row">
        <div class="text-center ">
          <div class="col-xs-12 col-sm-12 col-md-12 subtitle">
            <%= @post.subtitle %>
          </div>
        </div>
        <%= cl_image_tag @post.cover, :crop => :fill, class: "img-post-header" %>
        <div class="col-md-8 col-md-offset-2">
          <div class="article">
            <div class="category-tab"><%= @post.category %></div>
            <div class="tags tags-<%= @post.tag.downcase %>"><%= @post.tag %></div>
            <div class="intro-part">
              <h5><strong><%= @post.introduction %></strong></h5>
              <div class="content-part">
                <p><%= markdown @post.content %></p>
              </div>

<!-- Render generator/showgenerator à mettre ici -->

<div class="col-md-12">
  <h2>Test Flashcard</h2>

    <ul class="list-unstyled text-center">
      <% @post.generators.each do |generator| %>
    <li>
      <h4>Hello<%= generator.ideog1 %></h4>
      <h4><%= generator.ideog2 %></h4>
      <%= link_to "supprimer la flashcard", post_generator_path(post_id: @post.id, id: generator.id),
          data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-default" %>

    </li>
      <% end %>
  </ul>
</div>




              <div class="text-center buttons-view-post">
                <% if current_user.try(:admin?) %>
                <%= link_to "Modifier l'article", edit_post_path(@post), class: "btn btn-default btn-md" %>
                <%= link_to "Créer un article", new_post_path, class: "btn btn-default btn-md" %>
                <%= link_to "Créer une flashcard", new_post_generator_path(@post), class: "btn btn-default" %>
                <% end %>
              <%= link_to "Voir tous les articles", blog_path, class: "btn btn-default btn-md" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




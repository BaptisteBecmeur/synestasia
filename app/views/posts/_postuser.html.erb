<div class="container" id="home-articles">

    <div class="card-filter-home" style="background: url(<%= cloudinary_url post.cover, angle: 340, overlay: "logo-mini-s", effect: "mask", opacity: "50" %>); background-size:cover">
    </div>
    <div class="card-details">

        <% if current_user.try(:admin?) %>
        <%= link_to post_path(post), class:'trash-article', data: { confirm: 'Are you sure?' }, method: :delete do %>
          <%= image_tag("delete-btn.png") %>
        <% end %>
        <% end %>

      <%= link_to post_path(post) do %>

        <span class="card-post-tag"><%= post.tag %></span>
        <h3><%= post.title %></h3>

        <h6 class="card-post-author">
          PubliÃ© par <%= post.user.first_name %>
          <%= post.user.last_name[0] %>.
        </h6>

      <% end %>
    </div>
</div>


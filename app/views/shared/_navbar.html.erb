<nav class="navbar-wagon">
  <div class="container navbar-wagon-container">

  <%= link_to root_path do  %>
     <div class= "header-logo">
        <%= image_tag "logo-head.png" %>
     </div>
  <% end %>

    <div class="navbar-wagon-pusher"></div>
    <% if user_signed_in? %>

    <%= link_to t(".top_call_to_action", default: "Mes cours"), start_path, class: "separator-navbar" %>

      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag current_user.picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <!-- <span class="caret"></span> -->
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-pencil-square-o"></i> <%= t ".profile", default: "Editer mon profil" %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
              <% end %>
            </li>
             <li>
              <%= link_to start_path do %>
                <i class="fa fa-pencil"></i>  <%= t ".profile", default: "Mes cours" %>
              <% end %>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-home"></i>  <%= t ".profile", default: "Home" %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "sign-navbar" %>
      <%= link_to t(".sign_up", default: "S'inscrire"), new_user_registration_path, class: "sign-navbar signup-navbar" %>
    <% end %>
  </div>

<div class="container-page">
  <div class="padding-page">
    <div class="container-fluid">
      <div class="row">
         <h4 class="text-center"><%= @alert_message %></h4>
        <ul class="list-inline text-center card-frame">
          <li>
            <div class="card">
              <div class="front">
                <!-- PARAMETRER LE RESPONSIVE BOOTSTRAP -->
                  <!-- <div class="col-sm- col-xs-4 col-md-3"> -->
                <span class="card-question popover-word" data-content="<h3 class='text-center letter-uppercase'><%= @hiragana.bigletter.upcase %></h3><p class='text-center'><b><%= @hiragana.midletter %></b> comme dans <b><%= @hiragana.transcription %></b></p>">
                  <i class="fa fa-eye fa-lg"></i>
                </span>

               <div class="audioclick">
                <% if @hiragana.sound.blank? %>
                  <i class="fa fa-volume-up cursor-stop fa-lg"></i>
                <% else %>
                  <a onclick="h=function(event) { event.preventDefault(); $('#audio_<%= @hiragana.id%>')[0].play();}; h(event)"><i class="fa fa-volume-up fa-lg"></i></a>
                  <audio id="audio_<%= @hiragana.id%>">
                    <source src="<%=@hiragana.sound%>" type="audio/mp3">
                    Your browser does not support the video tag.
                  </audio>
                  <% end %>
                </div>
                <!-- <div class="prononciation">
                  <i class="fa fa-comment"></i>
                </div> -->
                <div class="idea">
                  <% if @hiragana.upload.blank? %>
                    <i class="fa fa-lightbulb-o cursor-stop fa-lg"></i>
                  <% else %>
                    <span class="popover-trigger"
                  data-toggle="popover"
                  data-content='<%= cl_image_tag(@hiragana.upload,
                  :width => 210, :height => 290) %>'>
                    <i class="fa fa-lightbulb-o fa-lg"></i>
                    </span>
                  <% end %>
                </div>

                <div class="card-hiragana hiragana-<%=@hiragana.bigletter.downcase.last%>">
                  <h1><b><%= @hiragana.ideo1 %></b></h1>
                </div>
                <div class="card-katakana">
                  <p><%= @hiragana.ideo2 %></p>
                </div>
                <!-- </div> -->
              </div>
              <div class="back">
                <div class="col-sm-3 col-xs-4 col-md-3 containerbackcards-<%=@hiragana.bigletter.downcase.last%>">
                    <div class="backcard-hiragana">
                      <h1><b><%= @hiragana.ideo1 %></b></h1>
                    </div>
                    <div class="card-bigletter">
                      <p><%= @hiragana.bigletter.upcase %></p>
                    </div>
                </div>
              </div>
            </div>
          </li>
        </ul>

        <div class="text-center buttons-view-post">
          <% if current_user.try(:admin?) %>
            <%= link_to "Modifier l'hiragana", edit_hiragana_path(@hiragana), class: "btn btn-default btn-md" %>
            <% end %>
          <%= link_to "Voir tous les hiraganas", hiraganas_path, class: "btn btn-default btn-md" %>
        </div>
      </div>
    </div>
  </div>
</div>
